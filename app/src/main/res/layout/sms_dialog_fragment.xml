<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_name_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            style="@style/PrimaryText"/>
        <TextView
            android:id="@+id/dialog_body"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/dialog_name_number"
            android:textIsSelectable="true"
            style="@style/SecondaryText"/>
        <TextView
            android:id="@+id/dialog_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/dialog_data_color"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/dialog_body"
            android:layout_alignEnd="@+id/dialog_body"
            android:textIsSelectable="true"/>
        <Button
            android:id="@+id/dialog_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_back_button"
            android:textStyle="bold"
            android:textColor="@color/data_color"
            android:background="@drawable/button_background"
            android:layout_below="@+id/dialog_date"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            style="?android:attr/borderlessButtonStyle"/>
    </RelativeLayout>
</ScrollView>
